@{
    @if (ViewBag.Admin == 1) {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_KullaniciLayout";
    }

    }
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Kullanıcı Oluştur</title>
</head>

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                @if (ViewBag.Admin == 0)
                                {
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Yeni Kullanıcı oluştur:</h3></div>
                                }
                                else
                                {
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Kayıt Ol:</h3></div>
                                }
                                <div class="card-body">
                                    <form method="post" asp-action="Ekle" asp-route-admin="@ViewBag.Admin" role="form">
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">Kullanıcı Adı:</label>
                                            <input class="form-control py-4" name="kullaniciAdi" id="kullaniciAdi" type="text" placeholder="Kullanici Adi" />
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">E-Mail:</label>
                                            <input class="form-control py-4" name="kullaniciemail" id="kullaniciemail" type="text" placeholder="E-Mail" />
                                        </div>

                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">İsim:</label>
                                            <input class="form-control py-4" name="kullaniciisim" id="kullaniciisim" type="text" placeholder="Isim" />
                                        </div>

                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">Soyisim:</label>
                                            <input class="form-control py-4" name="kullanicisoyisim" id="kullanicisoyisim" type="text" placeholder="Soyisim" />
                                        </div>

                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">Adres:</label>
                                            <input class="form-control py-4" name="kullaniciadres" id="kullaniciadres" type="text" placeholder="ResimUrl" />
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">Profil Fotografi:</label>
                                            <input class="form-control py-4" name="kullaniciresimUrl" id="kullaniciresimUrl" type="text" placeholder="Adres" />
                                        </div>

                                        <div class="form-group">
                                            <label class="small mb-1" for="inputPassword">Şifre:</label>
                                            <input class="form-control py-4" name="sifre" id="sifre" type="text" placeholder="Sifre" />
                                        </div>
                                        @if (ViewBag.Admin == 1)
                                        {
                                            <div>
                                                @Html.DropDownList("Rol", ViewBag.Rol as SelectList)
                                            </div>
                                        }
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <input class="btn btn-primary" type="submit" value="Ekle" />
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    @if (ViewBag.Admin == 1)
                                    {
                                        <div class="small"><a asp-action="KullaniciListele">Kullanici Listesi</a></div>
                                    }
                                    else
                                    {
                                        <div class="small"><a asp-action="Giris">Giris</a></div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>




