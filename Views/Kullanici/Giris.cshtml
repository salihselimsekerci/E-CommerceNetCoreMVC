@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        @* <title>@ViewData["Title"] - NetCore</title>*@
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="~/css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>

    <title>Proje/Giris</title>
</head>

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Giris</h3></div>
                                <div class="card-body">
                                    <form method="post" asp-action="Giris" role="form">
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">Kullanıcı Adı:</label>
                                            <input class="form-control py-4" name="kullaniciAdi" id="kullaniciAdi" type="text" placeholder="Kullanici Adi" />
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputPassword">Şifre:</label>
                                            <input class="form-control py-4" name="sifre" id="sifre" type="password" placeholder="Sifre" />
                                        </div>

                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <input class="btn btn-primary" type="submit" value="Giris" />
                                            <a  asp-action="Ekle" asp-controller="Kullanici" asp-route-admin="0">Kayıt Ol</a>
                                            <a  asp-action="SifreUnuttum" asp-controller="Kullanici">Şifremi Unuttum</a>
                                        </div>
                                    </form>


                                </div>

                                <form method="post" asp-action="DbYenile" role="form">
                                    <input style="background: cadetblue; margin-bottom: 10px; float: right;" class="btn btn-primary" type="submit" value="Veritabanini Yenile" />
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>
